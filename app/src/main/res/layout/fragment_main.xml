<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tilerep"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2f5882DD"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/mainLayout"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a0fdfdfd"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <RelativeLayout
            android:id="@+id/titleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/welcomeTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Welcome to"
                android:textColor="#5882DD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/remousetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcomeTo"
                android:layout_centerHorizontal="true"
                android:text="ReMouse!"
                android:textColor="#5882DD"
                android:textSize="24sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleLayout"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="ReMouse transforms your phone into a remote mouse for your computer. Get the computer side application from :"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/details"
            android:gravity="center"
            android:paddingTop="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="github.com/NotMadeYet"
            android:textColor="#757575"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/ipEnter"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_below="@id/url"
            android:layout_marginTop="28dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/dashed"
            android:hint="Enter IP Address Here"
            android:textSize="12sp"
            android:inputType="phone"
            android:imeActionLabel="IP"
            android:gravity="center"/>


        <Button
            android:id="@+id/connectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ipEnter"
            android:text="CONNECT TO SERVER"
            android:textColor="#FFFFFF"
            android:background="#2c000000"/>



    </RelativeLayout>
